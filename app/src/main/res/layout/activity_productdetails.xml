<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">




    <ImageView
        android:id="@+id/imgPhoto_details"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        android:src="@drawable/banner"
        />

    <TextView
        android:id="@+id/txtRating_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imgPhoto_details"
        android:text="4.5 â˜…" /> <!-- Placeholder rating -->

    <TextView
        android:id="@+id/txtName_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtRating_details"
        app:layout_constraintStart_toStartOf="@id/txtRating_details"
        android:text="Brand Name" />

    <TextView
        android:id="@+id/txtDescription_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtName_details"
        app:layout_constraintStart_toStartOf="@id/txtName_details"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Product Description" />

    <TextView
        android:id="@+id/txtPrice_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtDescription_details"
        app:layout_constraintStart_toStartOf="@id/txtDescription_details"
        android:text="$99.99" />


    <Button
        android:id="@+id/cartButton_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to cart"
        android:layout_below="@id/txtPrice_details"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:ignore="MissingConstraints" />








</androidx.constraintlayout.widget.ConstraintLayout>